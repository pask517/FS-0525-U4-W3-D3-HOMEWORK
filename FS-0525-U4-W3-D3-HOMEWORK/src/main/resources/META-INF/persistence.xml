<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="FS-0525-U4-W3-D3-HOMEWORKpu">
        <!-- Il nome della Persistence Unit è importante perché nel codice Java dovremo richiamarla per nome-->

        <!-- TODO: Aggiungi elenco delle entities -->
        <class>andreapascarella.entities.Event</class>
        <class>andreapascarella.entities.Location</class>
        <class>andreapascarella.entities.Participation</class>
        <class>andreapascarella.entities.Person</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/FS-0525-U4-W3-D3-HOMEWORK"/>
            <!--  u4d12 è il nome del DB (se questo non è già stato creato in PgAdmin avrò un errore-->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--  Quest'ultima impostazione servirà per far creare/aggiornare le tabelle in automatico all'avvio dell'applicazione-->
        </properties>
    </persistence-unit>
</persistence>